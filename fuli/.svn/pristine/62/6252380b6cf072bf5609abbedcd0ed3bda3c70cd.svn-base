<#include "../inc/layout.html"> <@layout title="微信菜单">
<div class="nav">
	<ul class="cc">
		<li class="current"><a href="${root!}/wxmenu/list">微信菜单</a></li>
		<li><a href="${root!}/wxmenu/edit">添加微信菜单</a></li>
	</ul>
</div>
<form class="J_ajaxForm" action="${root!}/wxmenu/list" method="post">
	<div class="table_list">
		<table width="100%">
			<colgroup>
				<col width="80">
				<col width="100">
				<col>
				<col width="80">
				<col width="200">
			</colgroup>
			<thead>
				<tr>
					<td>排序</td>
					<td>ID</td>
					<td>显示名称</td>
					<td>类型</td>
					<td>URL</td>
					<td>点击事件key</td>
					<td>状态</td>
					<td>管理操作</td>
				</tr>
			</thead>
			<tbody>
			<#assign status=['
				<font color="red">×</font>','
				<font color="green">√</font>']>
				<#list page.list as u>
				 <#if ((u.pid)!0)!=0>
				 <#else>
				 <tr>
					<td>${(u.listorder)!}</td>
					<td align='center'>${(u.id)!}</td>
					<td>${(u.name)!}</td>
					<td><#if (u.type)=='click'>点击<#else>视图</#if></td>
					<td>${(u.url)!}</td>
					<td>${(u.key)!}</td>
					<td>${status[(u.status)!0]}</td>
					<td class="text-c">
					<a href="javascript:open_iframe_dialog('${root!}/wxmenuDetail/list?qryField=keywd&keywd=${u.key}','菜单内容');">菜单内容</a>|
					<a href="${root!}/wxmenu/edit/${u.id}">修改</a>|
					<a class="J_ajax_del" href="${root!}/wxmenu/del/${u.id}">删除</a></td>
				</tr>
					<#list page.list as u1>
						<#if (u1.pid)??&& u1.pid==u.id>
						<tr>
							<td>${(u1.listorder)!}</td>
							<td align='center'>${(u1.id)!}</td>
							<td>&nbsp;&nbsp;&nbsp;└─${(u1.name)!}</td>
							<td><#if (u1.type)=='click'>点击<#else>视图</#if></td>
							<td>${(u1.url)!}</td>
							<td>${(u1.key)!}</td>
							<td>${status[(u1.status)!0]}</td>
							<td class="text-c">
							<a href="javascript:open_iframe_dialog('${root!}/wxmenuDetail/list?qryField=keywd&keywd=${u1.key}','菜单内容');">菜单内容</a>|
							<a href="${root!}/wxmenu/edit/${u1.id}">修改</a>|
							<a class="J_ajax_del" href="${root!}/wxmenu/del/${u1.id}">删除</a></td>
						</tr>
						</#if>
					</#list>
				</#if>
				</#list>
			</tbody>
		</table>
		<div class="p10"><@paginate
			action="/wxmenu/list" pageNo=pageNo totalPage=page.totalPage!0
			totalCount=page.totalCount!0/></div>
			<div class="btn_wrap"><div class="btn_wrap_pd">
			<a href="javascript:createMenu();" class="btn btn_submit mr10">重新生成菜单</a>&nbsp;&nbsp;
			<a href="javascript:deleteMenu();" class="btn btn_submit mr10">删除菜单</a></div></div>
	</div>
</form>
<script>
function createMenu(){
	if(confirm("确定要提交到微信平台生成菜单吗？")){
		$.ajax({url:'${root!}/wxmenu/createMenu',dataType:'json',success:function (j){
			alert(j.msg);
		}});
	}
}
function deleteMenu(){
	if(confirm("确定要删除微信平台菜单吗？")){
		$.ajax({url:'${root!}/wxmenu/delMenu',dataType:'json',success:function (j){
			alert(j.msg);
		}});
	}
}
</script>
</@layout>
