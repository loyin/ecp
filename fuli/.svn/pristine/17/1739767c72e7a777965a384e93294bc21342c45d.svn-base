	public void yxAddGo(){
		Long id=this.getParaToLong(0);
		MobileApp po=MobileApp.dao.findById(id);
		po.set("lcs", po.getInt("lcs")+1);
		po.update();
		this.redirect(po.getStr("url"));
	}
	public void articleShow(){
